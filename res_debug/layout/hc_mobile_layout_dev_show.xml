<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/hc_mobile_debug_sin_page_block"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="right|center_vertical"
        android:padding="5dp"
        android:src="@drawable/hc_mobile_activity_debug_icon" />


    <View
        android:id="@+id/hc_mobile_debug_sin_page_block_0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#63000000" />


    <LinearLayout
        android:id="@+id/hc_mobile_debug_sin_page_block_1"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_gravity="bottom"
        android:background="#ffffff"
        android:orientation="vertical"
        android:visibility="visible">

        <com.powyin.slide.widget.SlideSwitch
            android:id="@+id/hc_mobile_debug_sin_slide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:pow_checked_drawable="@drawable/powyin_switch_slide_switch"
            app:pow_checked_hei="2dp"
            app:pow_fixed_item="2"
            app:pow_show_over_scroll="false">

            <TextView
                android:id="@+id/hc_mobile_debug_sin_slide_0"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center"
                android:minWidth="70dp"
                android:text="调试页面"
                android:textColor="#0179ff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/hc_mobile_debug_sin_slide_1"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center"
                android:minWidth="70dp"
                android:text="重置密码"
                android:textColor="#ff505251"
                android:textSize="16sp" />


        </com.powyin.slide.widget.SlideSwitch>



        <android.support.v4.view.ViewPager
            android:id="@+id/hc_mobile_debug_sin_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom">

            <LinearLayout
                android:id="@+id/hc_mobile_debug_sin_page_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/hc_mobile_debug_sin_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#ff505251" />

                <TextView
                    android:id="@+id/hc_mobile_debug_sin_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="http://172.19.0.106:5000"
                    android:textColor="#DA000000"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#ff505251" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#08000000"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/hc_mobile_activity_sign_qk"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="清空"
                        android:textColor="#ff505251"
                        android:textSize="18sp" />


                    <View
                        android:layout_width="1px"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:background="#ff505251" />


                    <TextView
                        android:id="@+id/hc_mobile_activity_sign_qx_0"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="取消"
                        android:textColor="#ff505251"
                        android:textSize="18sp" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/hc_mobile_debug_sin_page_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <Space
                    android:layout_width="1px"
                    android:layout_height="0px"
                    android:layout_weight="5" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/hc_mobile_password_0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:background="@drawable/hc_mobile_activity_pass_word"
                        android:hint="请输入新密码"
                        android:inputType="textPassword"
                        android:paddingLeft="8dp"
                        android:paddingTop="10dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="10dp" />


                    <ImageView
                        android:id="@+id/hc_mobile_password_text_0"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="10dp"
                        android:src="@drawable/hc_mobile_activity_pass_cover"
                        android:layout_marginRight="52dp"
                        android:layout_gravity="center_vertical|right"
                        />

                </FrameLayout>

                <Space
                    android:layout_width="1px"
                    android:layout_height="0px"
                    android:layout_weight="2" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/hc_mobile_password_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:background="@drawable/hc_mobile_activity_pass_word"
                        android:hint="请再次输入新密码"
                        android:inputType="textPassword"
                        android:paddingLeft="8dp"
                        android:paddingTop="10dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="10dp" />

                    <ImageView
                        android:id="@+id/hc_mobile_password_text_1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="10dp"
                        android:src="@drawable/hc_mobile_activity_pass_cover"
                        android:layout_marginRight="52dp"
                        android:layout_gravity="center_vertical|right"
                        />

                </FrameLayout>


                <Space
                    android:layout_width="1px"
                    android:layout_height="0px"
                    android:layout_weight="8" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="重置pc端调试页面访问入口密码"
                    android:textColor="#ff505251"
                    android:textSize="18sp" />


                <Space
                    android:layout_width="1px"
                    android:layout_height="0px"
                    android:layout_weight="2" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#ff505251" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#08000000"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/hc_mobile_activity_sign_wc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="完成"
                        android:textColor="#ff505251"
                        android:textSize="18sp" />


                    <View
                        android:layout_width="1px"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:background="#ff505251" />


                    <TextView
                        android:id="@+id/hc_mobile_activity_sign_qx_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="取消"
                        android:textColor="#ff505251"
                        android:textSize="18sp" />

                </LinearLayout>


            </LinearLayout>

        </android.support.v4.view.ViewPager>


    </LinearLayout>


</FrameLayout>